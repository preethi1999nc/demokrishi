<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" tools:context=".MainActivity"
    android:background="#ff56d0ff">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click  on  the   Button to  Activate  Personal   Assistant"
        android:textSize="25sp"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="italic"
        android:layout_margin="70dp"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/listenButton"
        android:layout_alignParentBottom="true"
        android:layout_margincenter="true"
        android:onClick="@+id/listenButton"
        android:background="drawable/microphone"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@+id/listenButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingRight="25dp"
        android:paddingcenter="25dp"
        android:text="Respond"
        android:textSize="20dp" />
</LinearLayout>